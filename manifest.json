{
    "manifest_version" : 2,
    "name"          : "RubyDoc Search",
    "description"   : "Search ruby-doc.org within the Chrome omnibox",
    "version"       : "1.0.0",
    "omnibox"       : { "keyword": "rdoc" },
    "icons"         : {
        "16" : "rubydoc-16.png",
        "48" : "rubydoc-48.png",
        "128": "rubydoc-128.png",
        "512": "rubydoc-512.png"
    },
    "background"    : {
        "scripts": [
            "jquery-1.7.2.min.js",
            "underscore-1.3.3.min.js",
            "rubydoc_search.js"
        ]
    }
}